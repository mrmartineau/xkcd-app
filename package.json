{
    "name": "xkcd-app",
    "version": "0.0.0",
    "description": "XKCD app",
    "main": "index.js",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "format:js": "prettier-standard 'components/**/*.js' 'pages/**/*.js' 'layouts/**/*.js'",
        "lint:js": "standard",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "linters": {
            "(components|pages)/**/*.js": [
                "prettier-standard",
                "test",
                "git add"
            ]
        }
    },
    "keywords": [
        "react",
        "react.js",
        "next.js"
    ],
    "author": "Zander Martineau",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.16.2",
        "design-system-utils": "^0.2.1",
        "emotion": "^8.0.6",
        "emotion-server": "^8.0.6",
        "next": "^4.0.3",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-emotion": "^8.0.6",
        "xkcd": "^1.1.2"
    },
    "devDependencies": {
        "babel-plugin-emotion": "^8.0.6",
        "babel-plugin-inline-react-svg": "^0.4.0",
        "enzyme": "^3.1.0",
        "enzyme-to-json": "^3.1.2",
        "eslint": "^4.5.0",
        "husky": "^0.14.3",
        "jest": "^21.2.1",
        "lint-staged": "^4.0.4",
        "prettier": "^1.5.3",
        "prettier-standard": "^7.0.1",
        "react-test-renderer": "^16.0.0"
    }
}
